$mainRed = #c62a31
$mainGray = #778081

@import fonts
@import 'jeet'

/*edit()*/

*
  box-sizing: border-box
  &:before, &:after
    box-sizing: border-box

html
  overflow-y: scroll
  min-height: 100%

body, html
  margin: 0
  padding: 0
  
body
  font-family: 'pt_sansregular'
  counter-reset: member
  background: url(../img/textura.png) repeat

.hidden
  display: none

.clear
  &:after
    content: ''
    display: block
    clear: both

.wrapper
  width: 1024px
  margin: 0 auto

.wrapper_relative
  position: relative

@import header
@import slider

.main-title
  color: #464646
  font-family: 'pt_sansregular'
  letter-spacing: -1.5px
  font-size: 26px
  line-height: 28px
  margin-bottom: 35px

.main-content
  padding-top: 50px

.news
  col(1/3)

.news__item
  margin-bottom: 27px
  &:last-child
    margin-bottom: 0

.news__date
  margin-bottom: 12px
  font-size: 12px

.news__title
  color: $mainRed
  font-family: 'pt_sansbold'
  font-size: 15px
  line-height: 20px
  margin-bottom: 7px

.news__content
  color: $mainGray

.conference-agenda
  col(1/3)

.conference-agenda__item
  position: relative
  padding-left: 20px
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0
  &:before
    content: ''
    position: absolute
    left: 0
    top: 2px
    width: 8px
    height: 8px
    border-radius: 50%
    background-color: $mainRed

.conference-agenda__period
  font-size: 12px
  margin-bottom: 8px

.conference-agenda__description
  color: #778081

.members
  col(1/3)

.members__item
  position: relative
  margin-bottom: 28px
  padding-left: 50px
  &:last-child
    margin-bottom: 0
  &:before
    counter-increment: member
    content: counter(member)
    width: 30px
    height: 30px
    line-height: 30px
    text-align: center
    border-radius: 50%
    border: 1px solid $mainRed
    position: absolute
    left: 0
    top: -1px
    font-size: 12px
  
.members__name
  color: $mainRed
  margin-bottom: 5px
  font-family: 'pt_sansbold'

.members__city
  color: $mainGray

.main-page-article
  col(1/2)

.main-page-article__title
  color: $mainRed
  font-family: 'pt_sansbold'
  font-size: 15px
  line-height: 20px
  margin-bottom: 20px
  
.main-page-article__image
  margin-bottom: 20px
.main-page-article__image_align-left
  float: left
  margin-right: 20px
  margin-bottom: 20px
.main-page-article__image_align-right
  float: right
  margin-left: 20px
  
.main-page-article__p
  color: $mainGray
  margin-bottom: 15px
  &:last-child
    margin-bottom: 0

.social-links
  height: 180px

.social-links__list
  height: inherit
  width: 100%
  text-align: center
  display: inline-block
  &:before
    display: inline-block
    vertical-align: middle
    height: 100%
    width: 0
    content: ''

.social-links__item
  height: 41px
  width: 41px
  display: inline-block
  vertical-align: middle
  margin-left: 85px
  &:first-child
    margin-left: 0

.social-links__link
  width: inherit
  height: inherit
  display: block
  text-indent: -9999px
  border-radius: 50%
  background-repeat: no-repeat
  background-position: 0 0
.social-links__link_facebook
  background-image: url(../img/Facebook.png)
.social-links__link_twitter
  background-image: url(../img/Twitter.png)
.social-links__link_linkedin
  background-image: url(../img/Linkedin.png)
.social-links__link_instagram
  background-image: url(../img/Instagram.png)
.social-links__link_googleplus
  background-image: url(../img/Google.png)
.social-links__link_youtube
  background-image: url(../img/Youtube.png)

@media (-webkit-min-device-pixel-ratio: 2),  (min-resolution: 192dpi)
  .social-links__link
    background-size: 41px 41px
  .social-links__link_facebook
    background-image: url(../img/Facebook@2x.png)
  .social-links__link_twitter
    background-image: url(../img/Twitter@2x.png)
  .social-links__link_linkedin
    background-image: url(../img/Linkedin@2x.png)
  .social-links__link_instagram
    background-image: url(../img/Instagram@2x.png)
  .social-links__link_googleplus
    background-image: url(../img/Google@2x.png)
  .social-links__link_youtube
    background-image: url(../img/Youtube@2x.png)

.main-footer
  line-height: 120px
  height: 120px
  background: #c62a31
  color: #fff
  font-size: 13px
  
.main-footer__copyrights
  position: absolute
  left: 0
  top: 0
  
.main-footer__nav
  width: 100%
  text-align: center

.main-footer__link
  color: #fff
  text-decoration: none
  margin-left: 26px
  &:first-child
    margin-left: 0

.main-footer__epam-made
  position: absolute
  right: 0
  top: 0

@import responsive
